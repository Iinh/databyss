{
  "root": "build/",
  "routes": {
    "/login": "login/index.html",
    "/**": "index.html"
  },
  "https_only": true,
  "headers": {
    "/**": {
      "Cache-Control": "no-cache, no-store, must-revalidate",
      "Strict-Transport-Security": "max-age=31536000"
    },
    "**.js": {
      "Cache-Control": "public, max-age=86400"
    },
    "**.jpg": {
      "Cache-Control": "public, max-age=86400"
    },
    "**.ico": {
      "Cache-Control": "public, max-age=86400"
    },
    "**.png": {
      "Cache-Control": "public, max-age=86400"
    }
  }
}
